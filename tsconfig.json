{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jasmine",
      "karma",
      "chrome"
    ],
    "sourceMap": true,
    "outDir": "dist/js",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
